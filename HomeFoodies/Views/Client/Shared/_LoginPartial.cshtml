@using HomeFoodies.Models
@model LoginUser
@{
    ViewBag.Title = "Log in";
}

<div class="modal-dialog modal-login-resized">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
            <h4 class="modal-title">Login</h4>
        </div>
        <div class="modal-body">
            <div class="scroller" style="height:250px" data-always-visible="1" data-rail-visible1="1">
                @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "login-form", role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, "", new { @class = (ViewBag.ValidLogin == null || ViewBag.ValidLogin) ? "alert alert-danger display-hide" : "alert alert-danger" })
                    <div class="portlet-body form">
                        <div class="row">
                            <div class="form-body">
                                <div class="col-md-1">
                                </div>
                                <div class="col-md-10">
                                    <div class="form-group form-md-line-input has-warning">
                                        <div class="input-group">
                                            <span class="input-group-addon">
                                                <i class="icon-envelope"></i>
                                            </span>
                                            @Html.TextBoxFor(m => m.UserEmail, new { @class = "form-control", @placeholder = "", @autocomplete = "off" })
                                            @Html.ValidationMessageFor(m => m.UserEmail, "", new { @class = "text-danger" })
                                            <label for="form_control_1 font-input" class="font-input">Email Address</label>
                                            <span class="help-block">e.g. example@gmail.com</span>
                                        </div>
                                    </div>
                                    <div class="form-group form-md-line-input has-warning">
                                        <div class="input-group">
                                            <span class="input-group-addon">
                                                <i class="icon-key"></i>
                                            </span>
                                            @Html.PasswordFor(m => m.UserPassword, new { @class = "form-control", @placeholder = "Password", @autocomplete = "off" })
                                            @Html.ValidationMessageFor(m => m.UserPassword, "", new { @class = "text-danger" })
                                            <label for="form_control_1 font-input" class="font-input">Password</label>
                                            <span class="help-block">e.g. home2foodies</span>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-1">
                                </div>
                            </div>
                        </div>

                        <div class="modal-footer">
                            <button type="button" data-dismiss="modal" class="btn default">Close</button>
                            <input type="submit" value="Login" class="btn btn-warning" />
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>