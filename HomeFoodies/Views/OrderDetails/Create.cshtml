@model HomeFoodies.Models.OrderDetail

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Client/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <hr>
    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Item.ItemID)
        @Html.HiddenFor(model => model.OrderID)
        @Html.HiddenFor(model => model.ItemID)
        @Html.HiddenFor(model => model.DetailID)

        <div class="row">
            <div class="col-lg-4">
                <img src="@Url.Content((String.IsNullOrEmpty(Model.Item.ImagePath) ? "~/img/products/default.png" : Model.Item.ImagePath))" alt="" style="height:100%;width:100%;" />
            </div>

            <div class="col-lg-8">
                <div class="page-title">
                    <h1>@Html.DisplayFor(model => model.Item.ItemName)</h1>
                </div>
                <div class="page-title">
                    <h3>Price: <b style="color: #FF5722;">@Html.DisplayFor(model => model.Item.ItemPrice) Rupees</b></h3>
                </div>
                <div class="page-title hidden">
                    Max Order Limit: <h3>@Html.DisplayFor(model => model.Item.MaxOrderLimit)</h3>
                </div>
                <div class="clearfix"></div>
                <br>
                <div class="page-title">
                    <div id="spinner1">
                        <div class="input-group input-small">
                            @Html.EditorFor(model => model.OrderQty, new { htmlAttributes = new {Value="1", @class = "spinner-input form-control" } })
                            <div class="spinner-buttons input-group-btn btn-group-vertical">
                                <button type="button" class="btn spinner-up btn-xs blue">
                                    <span class="md-click-circle md-click-animate" style="height: 22px; width: 22px; top: -5px; left: 0.5px;"></span>
                                    <i class="fa fa-angle-up"></i>
                                </button>
                                <button type="button" class="btn spinner-down btn-xs blue">
                                    <span class="md-click-circle md-click-animate" style="height: 22px; width: 22px; top: -2px; left: -1.5px;"></span>
                                    <i class="fa fa-angle-down"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
                <br>
                <div class="page-title">
                    <input type="submit" value="Order Now" class="btn btn-warning" />
                </div>

            </div>
        </div>

        <div class="clearfix margin-bottom-20">
        </div>

        <div class="portlet-body">
            <ul class="nav nav-tabs">
                <li class="active">
                    <a href="#tab_1_1" data-toggle="tab" aria-expanded="true">
                        Description
                    </a>
                </li>
                <li class="">
                    <a href="#tab_1_2" data-toggle="tab" aria-expanded="false">
                        Reviews
                    </a>
                </li>
            </ul>
            <div class="tab-content">
                <div class="tab-pane fade active in" id="tab_1_1">
                    <p>
                        @Html.DisplayFor(model => model.Item.ItemDescription)  
                    </p>
                </div>
                <div class="tab-pane fade" id="tab_1_2">
                    <p>

                    </p>
                </div>
            </div>
            <div class="clearfix margin-bottom-20">
            </div>
        </div>

        <div class="form-group hidden">
            @Html.LabelFor(model => model.Order.OrderNo, "Order No", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Order.OrderNo, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
            </div>
        </div>

        <div class="form-group hidden">
            @Html.LabelFor(model => model.Item.UOMTypeID, "UOMTypeID", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("UOMTypeID", null, htmlAttributes: new { @class = "form-control", @readonly = "readonly" })
            </div>
        </div>

        <div class="form-group hidden">
            @Html.LabelFor(model => model.OrderPrice, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.OrderPrice, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
            </div>
        </div>

        <div class="form-group hidden">
            @Html.LabelFor(model => model.OrderQty, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.OrderQty, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.OrderQty, "", new { @class = "text-danger" })
            </div>
        </div>

        @*<div id="spinner1">
        <div class="input-group input-small">
            @Html.EditorFor(model => model.OrderQty, new { htmlAttributes = new { @class = "spinner-input form-control" } })
